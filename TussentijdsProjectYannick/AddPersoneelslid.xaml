<Window x:Class="TussentijdsProjectYannick.AddPersoneelslid"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TussentijdsProjectYannick"
        mc:Ignorable="d"
        Title="AddPersoneelslid" Height="450" Width="800">
    <StackPanel Margin="100">
        <TextBox x:Name="txtVoornaam">voornaam</TextBox>
        <TextBox x:Name="txtAchternaam">achternaam</TextBox>
        <TextBox x:Name="txtUsername">Username</TextBox>
        <PasswordBox x:Name="txtPassword"></PasswordBox>
        <ComboBox x:Name="cbAdminRechten"></ComboBox>
        <DatePicker x:Name="dtIndiensttreding"></DatePicker>
        <DatePicker x:Name="dtGeboortedatum"></DatePicker>
        <WrapPanel>
            <Button x:Name="btnAdd" Margin="10" Click="btnAdd_Click">add</Button>
            <Button x:Name="btnCancel" Margin="10" Click="btnCancel_Click">cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
