                        </WrapPanel>
                        <ComboBox x:Name="cbLeverancierEditProducten"></ComboBox>
                        <ComboBox x:Name="cbCategorieEditProducten"></ComboBox>
                        <WrapPanel>
                            <TextBox x:Name="nudAantalOpVooraadProducten" Text="0" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Width="auto" MaxWidth="100" PreviewTextInput="txtHuisnummerKlantToevoegen_PreviewTextInput" DataObject.Pasting="txtHuisnummerKlantToevoegen_Pasting"/>
