                        <WrapPanel>
                            <Button x:Name="btnToevoegenBestellingProduct" Click="btnToevoegenBestellingProduct_Click">Toevoegen</Button>
                            <Button x:Name="btnEditBestellingProduct" Click="btnEditBestellingProduct_Click" IsEnabled="False">Edit</Button>
